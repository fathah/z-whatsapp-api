<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Authentication</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/qrcodejs/1.0.0/qrcode.min.js"></script>

    <style type="text/css">
        body{
            padding: 2rem;
            font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
        }
        .reload{
            margin-top: 20px;
            padding: 10px 20px;
            border: 1px solid #ccc;
            border-radius: 5px;
            background-color: #00864a;
            color: #fff;
            cursor: pointer;
        }
        #qrcode{
            color: #bb1c00;
        }
    </style>
</head>
<body>
    <h1>Z-WA Authentication</h1>
    <div id="qrcode" style="margin-top: 20px;"></div>
    <div>
        <button class="reload" onclick="reload()">Reload</button>
    </div>
</body>
<script>

    function reload(){
        window.location.reload();
    }
    setInterval(function () {
        reload();
    }, 10000);
  
  function start(){
    const qrEl = document.getElementById("qrcode");
    const qrValue = '<%= qr %>';
    if(qrValue==="CONNECTED"){
        alert("Whatsapp Connected");
        qrEl.innerHTML = "Whatsapp Connected"
        return;
    }
    if(qrValue.length<10){
        
        qrEl.innerHTML = "Invalid QR Value"
        return;
    }

    // Generate QR code
    const qrcode = new QRCode(qrEl, {
        text: qrValue,
        width: 350,  // width of the QR code
        height: 350  // height of the QR code
    });
  }
  start();
</script>
</html>
